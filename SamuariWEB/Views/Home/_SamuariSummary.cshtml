@model SamuraiViewModel

<section>
    <h3>@Model.Name</h3>
    <div>Clan: @Model.Clan</div>
    <div>HairCut: @Model.HairCut</div>
    @if (Model.HasSword)
    {
        <div>HasSword: Yes</div>
    }
    else
    {
        <div>HasSword: No</div>
    }
    <div>
        <a asp-controller="Quote" asp-action="GetQuotes" asp-route-id="@Model.Id " asp-route-name="@Model.Name" >Quotes</a>
    </div>

</section>